<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo_2022"
    tools:context=".MainActivity"

    >



    <ImageView
        android:layout_width="21dp"
        android:layout_height="23dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/skip"
        android:layout_width="40dp"
        android:layout_height="23dp"
        android:text="skip"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/white"
     />

    <ImageView
        android:layout_width="16dp"
        android:layout_height="23dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="370dp"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"

         />



    <TextView
        android:id="@+id/jk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="72dp"
        android:text="Style"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="72dp"
        android:text="ON"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="50sp"
      />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Create Account"
        android:textColor="@color/white"
        android:layout_marginStart="30dp"
        android:textSize="28sp"
        android:layout_below="@+id/jk"/>
    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name"
        android:textColorHint ="@color/white"

        android:drawableStart="@drawable/ic_baseline_person_24"

        android:drawablePadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_below="@+id/textView"
        android:backgroundTint="@android:color/white"/>
    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="Enter Email or Phone"

        android:textColorHint ="@color/white"

        android:backgroundTint="@android:color/white"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName"
        android:layout_below="@+id/editTextTextPersonName"/>

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:ems="10"
        android:hint="password"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
        android:layout_below="@+id/editTextTextEmailAddress"
        android:textColorHint ="@color/white"

        android:backgroundTint="@android:color/white"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_bg"
        android:drawableStart="@drawable/ic_baseline_email_25"
        android:text="  Sign Up"

        android:textSize="19sp"
        android:textColor="@color/black"
        android:paddingLeft="120dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        android:layout_below="@+id/editTextTextPassword"
        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/button_bg2"

        android:drawableStart="@drawable/facebook"
        android:text="Log in with facebook"

        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingLeft="56dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        android:layout_below="@+id/textView3"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Already a account? Log in"
        android:textColor="@color/white"
        android:layout_below="@+id/textView4"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:textSize="17dp"
        />


</RelativeLayout>